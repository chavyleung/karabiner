{
  "title": "单键切换中英输入法: ⌘ ⌥ ⇧ Caps ",
  "rules": [
    {
      "description": "短按 左 Command (⌘) 切换 ZH",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command"
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "left_command",
              "lazy": true
            },
            {
              "select_input_source": {
                "language": "zh*"
              }
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_command"
            }
          ]
        }
      ]
    },
    {
      "description": "短按 右 Command (⌘) 切换 EN",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_command"
          },
          "to": [
            {
              "key_code": "right_command"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "right_command",
              "lazy": true
            },
            {
              "select_input_source": {
                "language": "en"
              }
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "right_command"
            }
          ]
        }
      ]
    },
    {
      "description": "短按 左 Option (⌥) 切换 EN",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "zh*"
                }
              ]
            }
          ],
          "from": {
            "key_code": "left_option"
          },
          "to": [
            {
              "key_code": "left_option"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "left_option",
              "lazy": true
            },
            {
              "select_input_source": {
                "language": "en"
              }
            }
          ]
        }
      ]
    },
    {
      "description": "短按 左 Shift (⇧) 切换 EN",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift"
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "left_shift",
              "lazy": true
            },
            {
              "select_input_source": {
                "language": "en"
              }
            }
          ]
        }
      ]
    },
    {
      "description": "短按 左 Shift (⇧) 轮换",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift"
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar",
              "modifiers": ["left_control"]
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_shift"
            }
          ]
        }
      ]
    },
    {
      "description": "短按 Caps 切换 EN",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_command", "left_control", "left_option"]
            }
          ],
          "to_if_alone": [
            {
              "select_input_source": {
                "language": "en"
              }
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "caps_lock"
            }
          ]
        }
      ]
    }
  ]
}
